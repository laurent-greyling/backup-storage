@using Final.BackupTool.Common.Operational
@using Microsoft.Ajax.Utilities
@model Final.BackupTool.Common.Models.OperationalLogModel

@{
    ViewBag.Titel = "title";
}

<h4>Operational Log</h4>

@using (Html.BeginForm("Index", "OperationalLogs"))
{
    <div id="downloadLogs" class="card">
        
        <table>
            <colgroup>
                <col span="3" />
            </colgroup> 
            <tr>
                <td>
                    <label>Date:</label>
                </td>
                <td>
                    <input id="LogDate" type="date" name="LastModified"/>
                </td>
            </tr>
        </table>
        <input id="download" type="submit" value="download" class="button" name="DownloadLog" />
        <input id="viewLog" type="submit" value="view" class="button" name="ViewLog"/>
    </div>

    if ((string) ViewData[OperationalDictionary.ViewLog] != "true")
    {
        <div class="card">
            <p>No Logs have been recorded for this date</p>
        </div>
    }

    if ((string) ViewData[OperationalDictionary.ViewLog] == "true")
    {
         <div id="viewLogs" class="card">
             <div class="myBox">
                 @Html.Raw(ViewData[OperationalDictionary.LogDetails])
             </div>
         </div>
     }
}




