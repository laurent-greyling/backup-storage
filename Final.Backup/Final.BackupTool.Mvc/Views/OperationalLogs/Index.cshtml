@using Microsoft.Ajax.Utilities
@model Final.BackupTool.Common.Models.OperationalLogModel

@{
    ViewBag.Titel = "title";
}

@using (Html.BeginForm("Index", "OperationalLogs"))
{
    <div id="downloadLogs" class="card">
        <h4>Operational Log</h4>
        <table>
            <colgroup>
                <col span="3" />
            </colgroup>
            <tr>
                <td>
                    <label>Operational Storage:</label>
                </td>
                <td>
                    @Html.TextBoxFor(model => model.OperationalStorageConnectionString, new { Size="100", Placeholder="Operational Storage", Id="operationalStorage", Class="textinput", Required = "required", Value = ViewData["OperationalStorageConnectionString"] })
                </td>
            </tr>
            <tr>
                <td>
                    <label>Log Date:</label>
                </td>
                <td>
                    <input id="LogDate" type="date" name="LastModified"/>
                </td>
            </tr>
        </table>
        <input id="download" type="submit" value="download log" class="button" name="DownloadLog" />
        <input id="viewLog" type="submit" value="view log" class="button" name="ViewLog"/>
    </div>

    if ((string) ViewData["ViewLog"] == "true")
     {
         <div id="viewLogs" class="card">
             <div class="myBox">
                 @ViewData["LogDetails"]
             </div>
         </div>
     }
}




